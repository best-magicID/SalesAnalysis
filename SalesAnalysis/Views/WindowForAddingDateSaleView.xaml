<Window x:Class="SalesAnalysis.Views.WindowForAddingDateSaleView"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:vm="clr-namespace:SalesAnalysis.ViewModels"
        
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:WindowForAddingDateSaleViewModel, IsDesignTimeCreatable=True}"
        Title="Добавление продажи за день" 
        Height="190" 
        Width="300"
        WindowStartupLocation="CenterScreen" 
        SizeToContent="Height">
    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название модели"
                   Grid.Column="0"
                   Grid.Row="0"
                   VerticalAlignment="Center"/>
        <ComboBox Grid.Column="1"
                  Grid.Row="0"
                  Margin="5"
                  IsEditable="True"
                  ItemsSource="{Binding ListModels}"
                  DisplayMemberPath="NameModel"
                  SelectedItem="{Binding SelectedModel}"/>

        <TextBlock Text="Дата продажи"
                   Grid.Column="0"
                   Grid.Row="1"
                   VerticalAlignment="Center"/>
        <DatePicker Grid.Column="1"
                    Grid.Row="1"
                    Margin="5"
                    SelectedDate="{Binding NewDate}"/>

        <TextBlock Text="Количетсво моделей"
                   Grid.Column="0"
                   Grid.Row="2"
                   VerticalAlignment="Center"/>
        <TextBox Grid.Column="1"
                 Grid.Row="2"
                 Margin="5"
                 Text="{Binding CountModels}"/>

        <Button Name="ButtonForSaveDateSale" 
                Margin="10"
                Padding="5"
                Grid.Column="1"
                Grid.Row="3"
                Width="80"
                Content="Сохранить"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Command="{Binding SaveDateSaleCommand}"/>

    </Grid>
</Window>
