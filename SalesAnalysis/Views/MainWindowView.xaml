<Window x:Class="SalesAnalysis.Views.MainWindowView"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:vm="clr-namespace:SalesAnalysis.ViewModels"
        xmlns:conv="clr-namespace:SalesAnalysis.Converters"
        
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel, IsDesignTimeCreatable=False}"
        Title="Анализ продаж" 
        Height="450" 
        Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ForControls"
               TargetType="Button">
            <Setter Property="Margin"
                    Value="105" />
        </Style>
        
        <!--<conv:ValueToBrushConverter x:Key="ValueToBrushConverter"/>-->
        
        <!--<Style x:Key="CellStyle" 
               TargetType="DataGridCell">
            <Setter Property="Background" 
                    Value="{Binding RelativeSource={RelativeSource Self}, Converter={StaticResource ValueToBrushConverter}}" />
        </Style>-->

    </Window.Resources>

    <Grid Margin="5">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Левая часть-->
        <StackPanel>
            <Button x:Name="ButtonAddModel" 
                    Content="Добавить модель"
                    Command="{Binding AddModelCommand}"/>

            <Button x:Name="ButtonDeleteModel" 
                    Content="Удалить модель"
                    Command="{Binding DeleteModelCommand}"/>

        </StackPanel>

        <TextBlock Text="Выбор модели"
                   Grid.Row="1"/>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding ListModels}"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  AutoGenerateColumns="False"
                  SelectedItem="{Binding SelectedModel}">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Модель" 
                                    Binding="{Binding Path=NameModel}"
                                    Width="*" 
                                    IsReadOnly="True"/>
            </DataGrid.Columns>
            
        </DataGrid>
        
        <!--Разделитель-->
        <GridSplitter Grid.Column="1" 
                      Grid.RowSpan="3"
                      Width="5" 
                      HorizontalAlignment="Stretch"/>

        <!--Правая часть-->
        <StackPanel Grid.Column="2" 
                    Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Год "
                           VerticalAlignment="Center"/>
                
                <ComboBox x:Name="ComboBoxForYear"
                          ItemsSource="{Binding ListYears}"
                          SelectedItem="{Binding SelectedYear}"/>
                
                <Button x:Name="ButtonShowAllModels" 
                        Content="Показать все модели"
                        Margin="20 0 0 0"
                        Command="{Binding ShowAllModelsCommand}"/>

                <Button x:Name="ButtonSaveToExcel" 
                        Content="Сохранить данные в Excel"
                        Margin="10 0 0 0"
                        Command="{Binding SaveToExcelCommand}"/>

                <Button x:Name="ButtonAddDateSale" 
                        Content="Добавить продажу"
                        Margin="10 0 0 0"
                        Command="{Binding AddDateSaleCommand}"/>


            </StackPanel>
            
        </StackPanel>

        <DockPanel Grid.Column="2"
                   Grid.Row="1"
                   Grid.RowSpan="2">
            
            <StackPanel Orientation="Horizontal" 
                        Margin="0 0 0 0"
                        DockPanel.Dock="Top">
                <TextBlock Text="Продажи по месяцам за "
                           VerticalAlignment="Bottom"/>

                <TextBlock Text="{Binding SelectedYear}"
                           VerticalAlignment="Bottom"/>
            </StackPanel>
        
        
        <DataGrid Grid.Row="2"
                  Grid.Column="2"
                  ItemsSource="{Binding ListSalesByYears}"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  AutoGenerateColumns="False"
                  CanUserSortColumns="False"
                  DockPanel.Dock="Bottom">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ " 
                                    Binding="{Binding Path=IdModel}"
                                    Width="Auto" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Название модели" 
                                    Binding="{Binding Path=NameModel}"
                                    Width="Auto" 
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Январь" 
                                    Binding="{Binding Path=ArrAllTotalCosts[0]}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Февраль" 
                                    Binding="{Binding Path=ArrAllTotalCosts[1]}"
                                    Width="*" 
                                    IsReadOnly="True" >
                    <!--<DataGridTextColumn.CellStyle>
                        <Style>
                            <Setter Property="Control.Background" 
                                    Value="{Binding RelativeSource={RelativeSource Self}, Converter={StaticResource ValueToBrushConverter}}" />

                        </Style>
                    </DataGridTextColumn.CellStyle>-->
                </DataGridTextColumn>

                <DataGridTextColumn Header="Март" 
                                    Binding="{Binding Path=ArrAllTotalCosts[2]}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Апрель" 
                                    Binding="{Binding Path=ArrAllTotalCosts[3]}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Май" 
                                    Binding="{Binding Path=ArrAllTotalCosts[4]}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Июнь" 
                                    Binding="{Binding Path=ArrAllTotalCosts[5]}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Июль" 
                                    Binding="{Binding Path=ArrAllTotalCosts[6]}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Август" 
                                    Binding="{Binding Path=ArrAllTotalCosts[7]}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Сентябрь" 
                                    Binding="{Binding Path=ArrAllTotalCosts[8]}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Октябрь" 
                                    Binding="{Binding Path=ArrAllTotalCosts[9]}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Ноябрь" 
                                    Binding="{Binding Path=ArrAllTotalCosts[10]}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Декабрь" 
                                    Binding="{Binding Path=ArrAllTotalCosts[11]}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Год" 
                                    Binding="{Binding Path=TotalCostForYear}"
                                    Width="*" 
                                    IsReadOnly="True"/>

            </DataGrid.Columns>

            
            
