<Window x:Class="SalesAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesAnalysis"
        
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}"
        Title="Анализ продаж" 
        Height="450" 
        Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ForControls"
               TargetType="Button">
            <Setter Property="Margin"
                    Value="105" />
        </Style>

    </Window.Resources>

    <Grid Margin="5">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Левая часть-->
        <StackPanel>
            <Button x:Name="ButtonAddModel" 
                    Content="Добавить модель"
                    Click="ButtonAddModel_Click"/>
            
            <TextBlock Text="Выбор модели"/>
        </StackPanel>
        
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding ListModels}"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  AutoGenerateColumns="False">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Модель" 
                                    Binding="{Binding Path=NameModel}"
                                    Width="*" 
                                    IsReadOnly="True"/>
            </DataGrid.Columns>
            
        </DataGrid>
        
        <!--Разделитель-->
        <GridSplitter Grid.Column="1" 
                      Grid.RowSpan="3"
                      Width="5" 
                      HorizontalAlignment="Stretch"/>

        <!--Правая часть-->
        <StackPanel Grid.Column="2" 
                    Orientation="Horizontal">
            <TextBlock Text="Все модели"
                       VerticalAlignment="Bottom"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  Grid.Column="2"
                  ItemsSource="{Binding ListSalesModels}"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ " 
                                    Binding="{Binding Path=IdModel}"
                                    Width="Auto" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Название модели" 
                                    Binding="{Binding Path=NameModel}"
                                    Width="Auto" 
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Январь" 
                                    Binding="{Binding Path=TotalCostForJanuary}"
                                    Width="*" 
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Февраль" 
                                    Binding="{Binding Path=TotalCostForFebruary}"
                                    Width="*" 
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Март" 
                                    Binding="{Binding Path=TotalCostForMarch}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Апрель" 
                                    Binding="{Binding Path=TotalCostForApril}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Май" 
                                    Binding="{Binding Path=TotalCostForMay}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Июнь" 
                                    Binding="{Binding Path=TotalCostForJune}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Июль" 
                                    Binding="{Binding Path=TotalCostForJuly}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Август" 
                                    Binding="{Binding Path=TotalCostForAugust}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Сентябрь" 
                                    Binding="{Binding Path=TotalCostForSeptember}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Октябрь" 
                                    Binding="{Binding Path=TotalCostForOctober}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Ноябрь" 
                                    Binding="{Binding Path=TotalCostForNovember}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Декабрь" 
                                    Binding="{Binding Path=TotalCostForDecember}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Год" 
                                    Binding="{Binding Path=TotalCostForYear}"
                                    Width="*" 
                                    IsReadOnly="True"/>

            </DataGrid.Columns>

